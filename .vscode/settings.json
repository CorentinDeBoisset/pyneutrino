{
	"mypy.runUsingActiveInterpreter": true,
	"editor.insertSpaces": true,
	"black-formatter.args": [
		"--line-length",
		"120"
	],
	"[python]": {
		"editor.tabSize": 4,
		"editor.defaultFormatter": "ms-python.black-formatter",
		"editor.formatOnSave": true,
	},
	"[typescript]": {
		"editor.tabSize": 2
	},
	"[javascript]": {
		"editor.tabSize": 2
	},
	"[json]": {
		"editor.tabSize": 2
	},
	"[html]": {
		"editor.tabSize": 2
	},
	"[scss]": {
		"editor.tabSize": 2
	},
	"[markdown]": {
		"files.trimTrailingWhitespace": false,
	}
}
